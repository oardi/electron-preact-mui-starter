{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"jsx": "react",
		"jsxFactory": "h"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
